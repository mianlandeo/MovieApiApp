<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space8dp"
    android:layout_marginStart="@dimen/space8dp"
    android:layout_marginTop="@dimen/space8dp"
    android:layout_marginEnd="@dimen/space8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/space8dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_shimmer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/background_type"
            android:src="@drawable/shimmer_image" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>